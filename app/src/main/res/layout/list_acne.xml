<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvListMain"
    android:layout_width="140dp"
    android:layout_height="185dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical"
        android:padding="5dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageAcne"
            android:layout_width="@dimen/large_250"
            android:layout_height="@dimen/large_250"
            tools:srcCompat="@drawable/dummy_image" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNamaAcne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/gilroybold"
            android:gravity="center"
            android:text="Blackhead"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPenyebab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/gilroyregular"
            android:gravity="center"
            android:text="MBBS, DNB-Orthology"
            android:textSize="12sp"
            android:textStyle="normal"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSolusi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/gilroyregular"
            android:gravity="center"
            android:text="MBBS, DNB-Orthology"
            android:textSize="12sp"
            android:textStyle="normal"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>